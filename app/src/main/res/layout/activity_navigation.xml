<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/green_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="367dp"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:padding="10dp"
            android:src="@drawable/today_logo" />

        <ImageView
            android:background="@drawable/dark_rect"
            android:id="@+id/rhino"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:padding="10dp"
            android:src="@drawable/just_rhino" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_margin="16dp"
        android:background="@drawable/dark_rect"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_to_timer_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/dark_green_button_selector"
                android:fontFamily="@font/roboto_regular"
                android:text="Календарь"

                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/calendar_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/dark_green_button_selector"
                android:fontFamily="@font/roboto_regular"
                android:text="Мои задачи"
                android:onClick="GoToMain"
                android:textColor="@color/white"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/todo1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/dark_green_button_selector"
                android:fontFamily="@font/roboto_regular"
                android:text="TODO"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/todo2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/dark_green_button_selector"
                android:fontFamily="@font/roboto_regular"
                android:text="TODO"
                android:textColor="@color/white"
                app:backgroundTint="@null" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>